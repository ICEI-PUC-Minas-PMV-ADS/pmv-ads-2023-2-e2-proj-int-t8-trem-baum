@{
    ViewData["Title"] = "Cadastro";
}

<head>
    <title>Cadastro</title>
    <link href="~/css/cadastrocss.css" rel="stylesheet" />
</head>
<div class='container-cadastro'>
    <div class='card'>
        <h1> Cadastrar </h1>

        <div id='msgError'></div>
        <div id='msgSuccess'></div>

        <div class="label-float">
            <label id="labelemail" for="email">E-mail</label>
            <input type="text" id="email" placeholder="seuemail@email.com " required>
            <i id="email" class="fa fa-eye" aria-hidden="true"></i>
        </div>

        <div class="label-float">
            <label id="labelNome" for="nome">Nome</label>
            <input type="text" id="nome" placeholder="Nome completo" required>
        </div>

        <div class="label-float">
            <label id="labelUsuario" for="usuario">Usuário</label>
            <input type="text" id="usuario" placeholder="Nome de usuario" required>
        </div>

        <div class="label-float">
            <label id="labelSenha" for="senha">Senha</label>
            <input type="password" id="senha" placeholder="******" required>
            <i id="verSenha" class="fa fa-eye" aria-hidden="true"></i>
        </div>
        <div class="label-float">

            <div class="label-float">
                <label id="labelConfirmSenha" for="confirmSenha">Confirmar Senha</label>
                <input type="password" id="confirmSenha" placeholder="******" required>
                <i id="verConfirmSenha" class="fa fa-eye" aria-hidden="true"></i>
            </div>

            <div class='justify-center'>
                <button class="btn btn-secondary btn-lg btn-block" onclick='cadastrar()'>Cadastrar</button>
            </div>


        </div>
    </div>
</div>